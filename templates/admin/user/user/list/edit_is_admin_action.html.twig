{% if is_granted('ROLE_SUPER_ADMIN') %}
    {% if object.isAdmin %}
        {% if object.isSuperAdmin %}
            <a href="{{ admin.generateObjectUrl('removeSuperAdminRole', object) }}" class="btn btn-sm btn-default edit_link" title="Retirer les droits super administrateur">
                <i class="fas fa-times" aria-hidden="true"></i>
                Super Administrateur
            </a>
        {% else %}
            <a href="{{ admin.generateObjectUrl('removeAdminRole', object) }}" class="btn btn-sm btn-default edit_link" title="Retirer les droits administrateur">
                <i class="fas fa-times" aria-hidden="true"></i>
                Administrateur
            </a>
            <a href="{{ admin.generateObjectUrl('addSuperAdminRole', object) }}" class="btn btn-sm btn-default edit_link" title="Ajouter les droits super administrateur">
                <i class="fas fa-plus" aria-hidden="true"></i>
                Super administrateur
            </a>
        {% endif %}
    {% else %}
        <a href="{{ admin.generateObjectUrl('addAdminRole', object) }}" class="btn btn-sm btn-default edit_link" title="Ajouter les droits administrateur">
            <i class="fas fa-plus" aria-hidden="true"></i>
            Administrateur
        </a>
    {% endif %}
{% endif %}